<!doctype html>
<html lang="ko">
<head>
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width,initial-scale=1"/>
<title>FullSeason · Beyond Printing, Towards Branding</title>
<meta name="description" content="주식회사 풀시즌 — 프린팅 기술과 브랜드 운영을 아우르는 제조·운영사"/>

<style>
  :root{
    --bg:#0a0b11; --text:#e9ecf1; --muted:#9aa4b2; --card:#121420; --line:#1b2131;
    --g1:#6a49ff; --g2:#2a7fff; --g3:#49ff9a;
  }
  *{box-sizing:border-box}
  html,body{margin:0;background:var(--bg);color:var(--text);
    font:16px/1.6 -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Pretendard,Inter,system-ui,sans-serif}
  a{color:#9bc4ff;text-decoration:none}
  .wrap{max-width:1200px;margin:0 auto;padding:0 20px}

  /* Header */
  header{position:sticky;top:0;z-index:20;backdrop-filter:saturate(120%) blur(8px);
    background:linear-gradient(180deg,rgba(10,11,17,.85),rgba(10,11,17,.6) 55%,transparent)}
  .nav{display:flex;align-items:center;justify-content:space-between;padding:14px 0;border-bottom:1px solid var(--line)}
  .brand{font-weight:800;letter-spacing:.2px}
  .nav a{opacity:.9}
  .nav a:hover{opacity:1}

  /* HERO (center + gradient light sweep) */
  .hero{
    padding:96px 0 32px; text-align:center; position:relative; overflow:hidden;
    background:
      radial-gradient(1200px 600px at 0% -10%, rgba(106,73,255,.20), transparent 60%),
      radial-gradient(900px 600px at 100% -10%, rgba(42,127,255,.18), transparent 60%),
      radial-gradient(800px 600px at 50% -20%, rgba(73,255,154,.10), transparent 60%);
  }
  .kv{
    --grad: linear-gradient(90deg, var(--g1), var(--g2), var(--g3), var(--g1));
    font-size:clamp(36px,6vw,76px);
    line-height:1.06; margin:0 auto; font-weight:900; letter-spacing:.4px;
    background:var(--grad); background-size:200% 100%;
    -webkit-background-clip:text; background-clip:text; color:transparent;
    animation: kvgrad 12s linear infinite;
    position:relative; display:inline-block;
    text-shadow: 0 0 10px rgba(106,73,255,.12), 0 0 20px rgba(42,127,255,.10), 0 0 28px rgba(73,255,154,.08);
  }
  @keyframes kvgrad{ 0%{background-position:0% 0%} 100%{background-position:200% 0%} }
  .kv::after{
    content:""; position:absolute; inset:-8%;
    background: radial-gradient(180px 120px at var(--x,0%) var(--y,50%), rgba(255,255,255,.25), transparent 60%);
    mix-blend-mode:screen; opacity:.45; filter:blur(2px); pointer-events:none;
    animation: sweep 7s ease-in-out infinite;
  }
  @keyframes sweep{ 0%{ --x:-10%; --y:45% } 50%{ --x:110%; --y:60% } 100%{ --x:-10%; --y:50% } }
  .lead{color:var(--muted);margin:14px auto 0; max-width:820px}
  .pill{display:flex;gap:10px;flex-wrap:wrap;justify-content:center;margin-top:18px}
  .tag{display:inline-block;padding:7px 12px;border-radius:999px;background:#0e1325;border:1px solid var(--line);font-size:12px;color:var(--muted)}
  .gbtn{display:inline-block;margin-top:24px;padding:12px 18px;border-radius:12px;
    background:linear-gradient(90deg,var(--g1),var(--g2),var(--g3));color:#000;font-weight:800;text-decoration:none}

  /* Sections / Cards */
  section{padding:84px 0;border-top:1px solid var(--line)}
  h2{margin:0 0 18px;font-size:24px;font-weight:800}
  h3{margin:0 0 10px;font-size:18px;font-weight:700}
  .muted{color:var(--muted)}
  .grid{display:grid;gap:20px}
  .g2{grid-template-columns:1fr}
  .g3{grid-template-columns:1fr}
  @media(min-width:860px){.g2{grid-template-columns:1fr 1fr}.g3{grid-template-columns:repeat(3,1fr)}}

  /* Card tilt + glare */
  .card{
    background:var(--card);border:1px solid var(--line);border-radius:16px;padding:20px;
    transform-style:preserve-3d; transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
    will-change: transform; position:relative; overflow:hidden;
  }
  .card::before{
    content:""; position:absolute; inset:-1px; pointer-events:none;
    background: radial-gradient(140px 140px at var(--cx,120%) var(--cy,120%), rgba(106,73,255,.28), transparent 60%);
    opacity:0; transition:opacity .25s ease;
  }
  .card::after{
    content:""; position:absolute; inset:-1px; pointer-events:none;
    background: radial-gradient(200px 120px at var(--gx, -20%) var(--gy, -20%), rgba(255,255,255,.18), transparent 60%);
    mix-blend-mode:screen; opacity:0; transition:opacity .25s ease;
  }
  .card:hover{
    border-color:rgba(106,73,255,.35);
    box-shadow: 0 10px 30px rgba(0,0,0,.35), 0 0 0 1px rgba(106,73,255,.12) inset;
  }
  .card:hover::before{opacity:1}
  .card:hover::after{opacity:.5}

  /* Divider */
  .divider{height:1px;border:0;background:linear-gradient(90deg,transparent,var(--g1),var(--g2),var(--g3),transparent);opacity:.55;margin:40px 0 0}

  /* === CONTINUOUS CAROUSEL (no arrows/dots) === */
  .carousel-wrap{padding:0 0 72px;border-top:1px solid var(--line)}
  .carousel{
    position:relative; width:100%; aspect-ratio:16/9;
    border:1px solid var(--line); border-radius:18px; overflow:hidden; background:#0f1425;
    box-shadow:0 30px 80px rgba(0,0,0,.35)
  }
  .track{
    display:flex; height:100%;
    /* 4장 x 2세트 = 8장. 각 슬라이드가 컨테이너 폭 100%를 차지하므로 총 800%. */
    width:800%;
    animation: slideLoop 24s linear infinite;
  }
  /* 애니메이션: 처음 세트(0%) -> 두번째 세트(-400%)까지 이동, 끝에서 자연 재시작 */
  @keyframes slideLoop{
    0%{transform:translateX(0%)}
    100%{transform:translateX(-400%)}
  }
  .slide{
    flex:0 0 100%; height:100%; position:relative; overflow:hidden;
    display:block; /* figure 역할 */
  }
  .slide img{
    width:100%; height:100%; object-fit:cover; display:block;
  }
  /* 이미지가 없을 때의 Fallback */
  .slide.fallback{
    background:
      radial-gradient(800px 400px at 0% 0%, rgba(106,73,255,.25), transparent 60%),
      radial-gradient(600px 400px at 100% 0%, rgba(42,127,255,.22), transparent 60%),
      radial-gradient(500px 400px at 50% 100%, rgba(73,255,154,.18), transparent 60%),
      linear-gradient(180deg,#0f1425,#0b0f1f);
    display:grid; place-items:center; color:#cdd6e8; font-size:14px;
  }
  .slide.fallback::after{content:"Image coming soon"; opacity:.7}

  /* AI notice */
  .ai-badge{
    position:fixed; right:10px; bottom:10px; z-index:30;
    font-size:11px; color:#cfd6e3; opacity:.30; background:rgba(12,14,20,.4);
    border:1px solid rgba(255,255,255,.08); padding:6px 10px; border-radius:8px;
    backdrop-filter: blur(6px);
  }
  @media (max-width:520px){ .ai-badge{font-size:10px; right:8px; bottom:8px; padding:5px 8px} }

  footer{padding:48px 0;color:var(--muted);border-top:1px solid var(--line); text-align:center}
</style>
</head>
<body>
  <header>
    <div class="wrap nav">
      <div class="brand">FullSeason Co., Ltd.</div>
      <nav class="muted" style="display:flex;gap:16px">
        <a href="#about">회사소개</a><a href="#services">사업영역</a>
        <a href="#tech">프린팅</a><a href="#info">회사정보</a>
      </nav>
    </div>
  </header>

  <!-- HERO -->
  <section class="hero">
    <div class="wrap">
      <h1 class="kv">Beyond Printing,<br/>Towards Branding</h1>
      <p class="lead">풀시즌은 프린팅 기술과 브랜드 운영을 아우르는 제조·운영사로, 아이디어를 실제 브랜드로 완성합니다.</p>
      <div class="pill">
        <span class="tag">Printing Support</span>
        <span class="tag">Brand House</span>
        <span class="tag">Creative Studio</span>
      </div>
      <a class="gbtn" href="#info">Contact</a>
    </div>
  </section>

  <!-- CONTINUOUS CAROUSEL -->
  <section class="carousel-wrap">
    <div class="wrap">
      <div class="carousel" id="carousel">
        <div class="track" id="track">
          <!-- JS가 이미지 로드/검증 후 채웁니다 -->
        </div>
      </div>
    </div>
  </section>

  <!-- ABOUT -->
  <section id="about">
    <div class="wrap grid g2">
      <div class="card">
        <h2>회사소개</h2>
        <p class="muted">
          주식회사 풀시즌(FullSeason)은 2024년 설립된 제조 기반 브랜드 운영사입니다.
          DTF, HTV Vinyl, Sublimation 등 프린팅 기술과 브랜드 운영 경험을 결합해 차별화된 솔루션을 제공합니다.
        </p>
        <hr class="divider"/>
      </div>
      <div class="card">
        <h2>연혁</h2>
        <p class="muted">2024.07 — 주식회사 풀시즌 설립</p>
        <p class="muted">현재 — 자체 브랜드 준비중</p>
      </div>
    </div>
  </section>

  <!-- SERVICES -->
  <section id="services">
    <div class="wrap">
      <h2>사업영역</h2>
      <div class="grid g3">
        <div class="card">
          <h3>Printing & Manufacturing</h3>
          <p class="muted">DTF / HTV Vinyl / Sublimation<br/>굿즈 · 유니폼 · 프로모션 제작</p>
        </div>
        <div class="card">
          <h3>Brand Operation</h3>
          <p class="muted">자체 브랜드 기획·운영(Coming Soon)<br/>드랍·프리오더 중심 운영</p>
        </div>
        <div class="card">
          <h3>Creative Solutions</h3>
          <p class="muted">로고 디자인 · 웹사이트 · 상세페이지<br/>AI 기반 비주얼/콘텐츠 제작</p>
        </div>
      </div>
    </div>
  </section>

  <!-- TECH -->
  <section id="tech">
    <div class="wrap">
      <h2>프린팅 제조방식</h2>
      <div class="grid g3">
        <div class="card">
          <h3>DTF Printing</h3>
          <div class="videoBox" style="aspect-ratio:16/9;background:#0f1425;border:1px solid var(--line);border-radius:14px;display:grid;place-items:center;color:var(--muted);">영상 준비 중 (외부 링크 예정)</div>
          <ul class="clean muted" style="margin:10px 0 0;padding-left:18px">
            <li>고해상도 출력 / 선명한 색감</li>
            <li>다양한 원단 적용 (면, 폴리, 합성섬유)</li>
            <li>소량 다품종·샘플링 최적화</li>
            <li>빠른 제작 사이클 → 드랍 운영 유리</li>
          </ul>
        </div>
        <div class="card">
          <h3>HTV Vinyl</h3>
          <div class="videoBox" style="aspect-ratio:16/9;background:#0f1425;border:1px solid var(--line);border-radius:14px;display:grid;place-items:center;color:var(--muted);">영상 준비 중</div>
          <ul class="clean muted" style="margin:10px 0 0;padding-left:18px">
            <li>글리터/메탈릭/홀로그램/벨벳/형광 등 다양한 소재</li>
            <li>소재별 열/압력 최적화 프레스 세팅</li>
            <li>유니폼, 패션 아이템, 프로모션 굿즈</li>
          </ul>
        </div>
        <div class="card">
          <h3>Sublimation</h3>
          <div class="videoBox" style="aspect-ratio:16/9;background:#0f1425;border:1px solid var(--line);border-radius:14px;display:grid;place-items:center;color:var(--muted);">영상 준비 중</div>
          <ul class="clean muted" style="margin:10px 0 0;padding-left:18px">
            <li>섬유 및 소품에 선명하고 오래가는 전사 효과</li>
            <li>티셔츠, 텀블러, 머그컵, 에코백 적용</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- COMPANY INFO -->
  <section id="info">
    <div class="wrap grid g2">
      <div class="card">
        <h2>회사정보</h2>
        <p class="muted">회사명: 주식회사 풀시즌 (FullSeason Co., Ltd.)</p>
        <p class="muted">대표이사: 김순주</p>
        <p class="muted">주소: 경상남도 양산시 양주1길 11, 403호 (세종빌딩)</p>
        <p class="muted">대표번호: 1544-5627</p>
        <p class="muted">이메일: fullseason11@naver.com</p>
        <p class="muted">사업자등록번호: 185-87-03430</p>
        <hr class="divider"/>
      </div>
      <div class="card">
        <h2>안내</h2>
        <p class="muted">
          본 홈페이지는 <strong>주식회사 풀시즌의 공식 홈페이지</strong>입니다.<br/>
          소비자 상담·교환·반품은 <strong>각 브랜드 스토어 고객센터</strong>를 통해 진행됩니다.<br/>
          전화 상담은 현재 제공하지 않으며, 문의는 이메일 <strong>fullseason11@naver.com</strong> 으로 부탁드립니다.
        </p>
      </div>
    </div>
  </section>

  <footer>
    <div class="wrap">© <span id="yr"></span> FullSeason Co., Ltd. All rights reserved.</div>
  </footer>

  <!-- AI Notice -->
  <div class="ai-badge">본 홈페이지에 사용된 인물 이미지는 AI 기술로 생성되었으며, 실제 임직원과는 무관합니다.</div>

<script>
  // Year
  document.getElementById('yr').textContent = new Date().getFullYear();

  // Headline light jitter (조금 더 자연스럽게)
  (function(){
    const kv = document.querySelector('.kv');
    function jitter(){
      kv.style.setProperty('--x', (Math.random()*100)+'%');
      kv.style.setProperty('--y', (45 + Math.random()*20)+'%');
    }
    setInterval(jitter, 2400);
  })();

  // Build continuous carousel (checks for real images; fallbacks if missing)
  (function(){
    const basePath = './assets/img/';  // 필요시 경로 수정
    // 실제 파일명과 정확히 맞추세요! (대소문자/공백 주의)
    const files = [
      'Untitled-1.png',
      'Untitled 2.png',
      'Untitled 3.png',
      'Untitle 4.png'
    ];

    const track = document.getElementById('track');

    // helper: create one slide (img or fallback)
    function makeSlide(src){
      const slide = document.createElement('div');
      slide.className = 'slide fallback'; // 기본은 fallback
      if(src){
        const img = new Image();
        img.alt = 'slide';
        img.loading = 'lazy';
        img.onload = ()=>{ slide.classList.remove('fallback'); slide.appendChild(img); };
        img.onerror = ()=>{ /* keep fallback */ };
        img.src = src;
      }
      return slide;
    }

    // 원본 세트
    files.forEach(name=>{
      const src = basePath + encodeURI(name);
      track.appendChild(makeSlide(src));
    });

    // 루프를 위한 복제 세트
    files.forEach(name=>{
      const src = basePath + encodeURI(name);
      track.appendChild(makeSlide(src));
    });
  })();

  // Card tilt + glare
  (function(){
    const cards = document.querySelectorAll('.card');
    cards.forEach(card=>{
      const maxTilt = 6;
      card.addEventListener('pointermove', e=>{
        const r = card.getBoundingClientRect();
        const x = e.clientX - r.left, y = e.clientY - r.top;
        const px = (x / r.width) - 0.5;
        const py = (y / r.height) - 0.5;
        const rx = (+py * maxTilt).toFixed(2);
        const ry = (-px * maxTilt).toFixed(2);
        card.style.transform = `perspective(700px) rotateX(${rx}deg) rotateY(${ry}deg) translateZ(0)`;
        card.style.setProperty('--cx', x+'px');
        card.style.setProperty('--cy', y+'px');
        card.style.setProperty('--gx', x+'px');
        card.style.setProperty('--gy', y+'px');
      });
      card.addEventListener('pointerleave', ()=>{
        card.style.transform = 'perspective(700px) rotateX(0) rotateY(0) translateZ(0)';
        card.style.removeProperty('--cx'); card.style.removeProperty('--cy');
        card.style.removeProperty('--gx'); card.style.removeProperty('--gy');
      });
    });
  })();
</script>
</body>
</html>
